@require "normalize.styl"
@require "codemirror.css"
@require "codemirror-3024-day.css"

$pink = #FF00C3
$blue = #00A4FF

html, body
  min-height: 100%
#app
  display: flex
  flex-direction: column
  flex: 1
.cells
  display flex
  flex-wrap wrap
  font-family monospace
  margin 15px

.cell
  margin 15px 15px 0 15px
  display flex
  flex-direction column
  position relative
  cursor text
  transition all 0.2s ease-in
  
  // overflow hidden


.cell-content
  display flex
  flex 1
  box-sizing border-box

.cell-id
  border none
  border-bottom 3px solid transparent
  font-size 14px
  padding 1px 2px
  text-align center
  margin-right 2px
  font-family monospace
  // font-weight 500
  // color #aaa
  &:hover
    background aliceblue
  &:focus
    background aliceblue
    outline 0
    
.CodeMirror
  display flex
  //flex-direction column
  flex 1

.CodeMirror-scroll
  flex 1
  height auto

.cm-s-3024-day.CodeMirror
  background white
  background #f9f9f9
  
.cell-size
  position absolute
  z-index 10
  bottom 5px
  right 5px
  width: 0
  height: 0
  border-style: solid
  border-width: 0 0 20px 20px
  border-color: transparent transparent rgba(0, 0, 0, 0.2) transparent
  display none
  &:hover
    border-color transparent transparent rgba(0, 0, 0, 0.4) transparent 
    cursor nwse-resize
.cell:hover
  .cell-size
    display block
  
.cell-drag-shadow
  z-index 2
  background rgba(0,0,0,0.1)
  position absolute
  margin-top 20px
  display none
  cursor nwse-resize

.cell-meta
  font-size: 12px
  font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif
  height 20px
  display flex
  line-height 20px
  
  
.cell-as-html
  position relative
  display flex
  flex 1
  width 100%
  > div:first-child  
    width 100%
  > svg:first-child
    width 100%
.show-formula
  color rgb(186,186,186)
  
  &:hover
    color rgb(0, 164, 255)
    cursor pointer

.cell-error
  color rgb(255, 147, 147)
  background rgb(137, 0, 0)
  padding 5
.touch-btn
  .cell-value
    display block
    font-size: 40px
    line-height 115px
    text-align center
    background: #f9f9f9
    cursor: pointer
    transition 0.1s all linear
    color #ddd
    font-size 65px

    &:hover
      font-size 95px


div.CodeMirror
  .cm-string
    color #FD6F02
  .CodeMirror-matchingbracket
    background rgba(0, 164, 255, 0.17) //#FFFF77
    padding-bottom 2px
    text-decoration none
    //font-weight bold
    //color #DB2D20 !important
    color black !important
  .cm-cell
    color rgb(255, 91, 0)
    background-color rgb(255, 234, 195)
    padding 0 7.80127px
  .cm-number
    color $pink

  .cm-keyword
    color #FF0000
.legend-bracket
  color #ddd
  font-size 16px
.function-legend
  background: #f9f9f9
  vertical-align top
  display: inline-block
  margin: 0 10px 10px 0
  white-space: pre-wrap
  padding: 10px
  color: #aaa
  font-size: 14px
  font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif
  
.cell-referenced
  .cell-value .CodeMirror
    background-color: rgba(244, 253, 2, 0.20)  
.cm-deref
  background-color: rgba(244, 253, 2, 0.38)
  color: rgb(2, 141, 253)
  padding: 0 3.9px
  border-radius: 4px










