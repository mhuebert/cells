@require "normalize.styl"
@require "codemirror.css"
@require "codemirror-solarized.css"

.cells
  display flex
  flex-wrap wrap
  font-family monospace
  margin 15px

.display-cell
  width 250px
  height 120px
  margin 15px
  display inline-block

.display-cell-source, .display-cell-value
  width 100%
  height 100%
  border 1px solid #eee
  display flex
  box-sizing border-box

.display-cell-value
  padding 5px 4px

.CodeMirror
  display flex
  //flex-direction column
  flex 1

.CodeMirror-scroll
  flex 1
  height auto

.display-cell
  position relative
  cursor text
  .display-cell-meta-id
    display none
  &:hover .display-cell-meta-id
    display block

.display-cell-meta
  padding 3px 4px
  // background #f7f7f7
  position absolute
  bottom 1px
  left 1px
  font-family "Helvetica Neue", Helvetica, sans-serif
  font-size 12px
  z-index 1
  width 100%
  box-sizing border-box

.display-cell-meta-id
  color #ccc
  float left

.display-cell-meta-formula
  color #ccc
  float right
  margin 0 2px

.touch-btn
  font-size: 40px
  width 100px
  height 100px
  box-sizing border-box
  line-height 95px
  text-align center
  background: #efefef
  display: inline-block
  margin: 0 30px
  cursor: pointer
  transition 0.1s all linear
  &:hover
     font-size 65px
